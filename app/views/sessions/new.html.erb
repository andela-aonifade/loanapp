<% if flash[:alert] %>
  <script>
    var $toastContent = $('<span><%= flash[:alert] %></span>');
    Materialize.toast($toastContent, 5000);
  </script>
<% end %>
<div class="login-page">
    <div class="login-box">
      <div class="logo">
        <img src="http://res.cloudinary.com/dzwafstu3/image/upload/v1500335660/nnpc/logo.png" />
      </div>
        <div class="card">
          <div class="body">
            <%= form_tag do %>
              <div class="msg">Sign in to start your session</div>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">person</i>
                </span>
                <div class="form-line">
                  <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Username/Email", required: true, autofocus: true %>
                </div>
              </div>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">lock</i>
                </span>
                <div class="form-line">
                  <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password", required: true %>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-8 p-t-5">
                  <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                  <label for="rememberme">Remember Me</label>
                </div>
                <div class="col-xs-4">
                  <%= submit_tag "SIGN IN", :class => "btn btn-block bg-pink waves-effect" %>
                </div>
              </div>
              <div class="row m-t-15 m-b--20">
                <div class="col-xs-6">
                  <a href="/users/new">Register Now!</a>
                </div>
                <div class="col-xs-6 align-right">
                  <a href="#">Forgot Password?</a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
</div>