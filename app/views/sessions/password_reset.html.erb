  <section>
    <div class="login-box">
      <%= render 'layouts/alerts' %>
      <div class="text-center">
        <%= image_tag "logo.png", alt: "NNPC Depot Logo", height: "40", class: "login-logo"  %>
      </div>

      <div class="card">
        <div class="flash-message">
          <% if flash[:notice] %>
            <%= content_tag :span, flash[:notice], class: "notice", id: "puffly" %>
          <% end %>
        </div>
        <div class="login-signin">
          <div class="row">
            <div class="col-12 text-center">
              <h3>Password Reset</h3>
            </div>
          </div>
          <%= form_with url: password_reset_path do |form|%>
            <div class="form-group row">
              <div class="col-12">
                <%= form.label :email, 'Enter Your Account Email' %>
                <%= form.text_field :email, class: "form-control", placeholder: "Email", required: true, autofocus: true %>
              </div>
            </div>

            <div class="form-group text-center row mt-2">
              <div class="col-12">
                <%= form.submit "Send Password Reset Link", :class => "btn btn-block btn-info" %>
              </div>
            </div>

            <div class="form-group row mt-2 mb-0">
              <div class="col-12">
                <a href="/login" class="register-now label-text">Login!</a>
              </div>
            </div>
          <% end %>
        
        </div>
      </div>
    </div>
  </section>
