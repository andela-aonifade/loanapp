<section class="main-content">
  <div class="container">
    <h2 class="page-title">All Notifications</h2>
    <div class="card">
      <% if @notification.nil? %>
        <div>You do not have any notification</div>
      <% else%>
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="text-center" style="width: 10%">#</th>
              <th class="text-center" style="width: 10%">Date</th>
              <th  class="text-center"  style="width: 20%">Type</th>
              <th style="width: 60%">Content</th>
            </tr>
          </thead>
          <tbody>
            <% @notifications.each_with_index do |notification|%>
            <tr>
              <td class="text-center"><%= index + 1 %></td>
              <td class="text-center"><%= @notification.createdAt %></td>
              <td class="text-center"><%= @notification.notifiable_type %></td>
              <td><%= @notification.notifiable_type %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

</section>

