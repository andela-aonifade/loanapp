<div class="login-box">
  <div class="logo">
      <img src="http://res.cloudinary.com/dzwafstu3/image/upload/v1500335660/nnpc/logo.png" />
  </div>
  <div class="card">
    <div class="body">
      <%= form_with(model: user, local: true) do |form| %>
        <div class="msg">Register to start applying for loan</div>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="input-group">
          <span class="input-group-addon">
              <i class="material-icons">person</i>
          </span>
          <div class="form-line">
            <%= form.text_field :username, id: :user_username, class: 'form-control', placeholder: 'Staff ID', autofocus:true, required: true%>
          </div>
        </div>
        <div class="input-group">
          <span class="input-group-addon">
              <i class="material-icons">email</i>
          </span>
          <div class="form-line">
            <%= form.text_field :email, id: :user_email, class: 'form-control', placeholder: 'Email' , required: true%>
          </div>
        </div>
        <div class="input-group">
          <span class="input-group-addon">
              <i class="material-icons">lock</i>
          </span>
          <div class="form-line">
            <%= form.password_field :password, id: :user_password, class: 'form-control', placeholder: 'Password', required: true %>
          </div>
        </div>
        <div class="input-group">
          <span class="input-group-addon">
              <i class="material-icons">lock</i>
          </span>
          <div class="form-line">
            <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control', placeholder: 'Confirm password', required: true %>
          </div>
        </div>
        <div class="form-group">
            <input type="checkbox" name="terms" id="terms" class="filled-in chk-col-pink" required>
            <label for="terms">I read and agreed to the <a href="javascript:void(0);">terms of conditions</a>.</label>
        </div>
        <%= form.submit "Register", :class => 'btn btn-block btn-lg bg-pink waves-effect'%>
      <% end %>
      <div class="m-t-25 m-b--5 align-center">
          <a href="/login">You already Registered?</a>
      </div>
  </div>
</div>

